<!DOCTYPE html>
<html lang="en">
<head>

    <!-- META SETTINGS -->
    <% include ../../partials/meta-settings.ejs %>

    <!-- PAGE TITLE -->
    <title>Edit News Release</title>

    <!-- CSS FILES -->
    <% include ../../partials/css-includes %>

</head>

<body id="page-top">

<!-- TOP NAVIGATION -->
<% include ../../partials/navbar %>

<div class="container">
    <div class="row">

        <div class="col-lg-8">

    <h1>Edit Case Study</h1>

            <% if(error && error.length > 0){ %>
                <div class="alert dark-red" role="alert">
                    <strong>
                        <%= error %>
                    </strong>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert green" role="alert">
                    <strong>
                        <%= success %>
                    </strong>
                </div>
            <% } %>


            <form action="../<%= study._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <label for="title" class="control-label">Title</label>
                    <input name="study[title]" type="text" class="form-control" id="title" value="<%= study.title %>" required>
                </div>

                <div class="form-group">
                    <label for="abstract" class="control-label">Abstract</label>
                    <textarea name="study[abstract]" type="text" class="form-control" rows="5" required><%= study.abstract %></textarea>
                </div>

                <div class="form-group">
                    <label for="imgUrl" class="control-label">Main Image Name</label>
                    <input name="study[imgUrl]" type="text" class="form-control" id="imgUrl" value="<%= study.imgUrl %>" required>
                </div>

                <div class="form-group">
                    <label for="imgAltText" class="control-label">Image Alt Text</label>
                    <input name="study[imgAltText]" type="text" class="form-control" value="<%= study.imgAltText %>" required>
                </div>

                <div class="form-group">
                    <label for="author" class="control-label">Author Info (if provided)</label>
                    <textarea name="study[author]" type="text" class="form-control" rows="5"><%= study.author %></textarea>
                </div>

                <div class="form-group">
                    <label for="clientName" class="control-label">Client Name</label>
                    <input name="study[clientName]" type="text" class="form-control" id="clientName" value="<%= study.clientName %>">
                </div>

                <div class="form-group">
                    <label for="clientLogo" class="control-label">Client Logo</label>
                    <input name="study[clientLogo]" type="text" class="form-control" id="clientLogo" value="<%= study.clientLogo %>">
                </div>

                <div class="form-group">
                    <label for="clientSinceHead" class="control-label">Client Since Heading</label>
                    <input name="study[clientSinceHead]" type="text" class="form-control" id="clientSinceHead" value="<%= study.clientSinceHead %>">
                </div>

                <div class="form-group">
                    <label for="clientSince" class="control-label">Client Since</label>
                    <input name="study[clientSince]" type="text" class="form-control" id="clientSince" value="<%= study.clientSince %>">
                </div>

                <div class="form-group">
                    <label for="clientAboutHead" class="control-label">About the Client Heading</label>
                    <input name="study[clientAboutHead]" type="text" class="form-control" id="clientAboutHead" value="<%= study.clientAboutHead %>" >
                </div>

                <div class="form-group">
                    <label for="clientAbout" class="control-label">Client About</label>
                    <textarea name="study[clientAbout]" type="text" class="form-control" id="clientAbout" rows="5"><%= study.clientAbout %></textarea>
                </div>

                <div class="form-group">
                    <label for="challenge" class="control-label">Challenge</label>
                    <textarea name="study[challenge]" type="text" class="form-control" id="challenge" rows="5" required><%= study.challenge %></textarea>
                </div>

                <div class="form-group">
                    <label for="solution" class="control-label">Solution</label>
                    <textarea name="study[solution]" type="text" class="form-control" id="solution" rows="5" required><%= study.solution %></textarea>
                </div>

                <div class="form-group">
                    <label for="benefit" class="control-label">Benefit</label>
                    <textarea name="study[benefit]" type="text" class="form-control" id="benefit" rows="5" required><%= study.benefit %></textarea>
                </div>


                <!-- You May Also Like -->
                <div class="form-group">
                    <label for="ymal1Title" class="control-label">YMAL1 Title</label>
                    <input name="study[ymal1Title]" type="text" class="form-control" id="ymal1Title" value="<%= study.ymal1Title %>">
                </div>

                <div class="form-group">
                    <label for="ymal1Img" class="control-label">YMAL1 Image</label>
                    <input name="study[ymal1Img]" type="text" class="form-control" id="ymal1Img" value="<%= study.ymal1Img %>">
                </div>

                <div class="form-group">
                    <label for="ymal1Alt" class="control-label">YMAL1 Alt Text</label>
                    <input name="study[ymal1Alt]" type="text" class="form-control" id="ymal1Alt" value="<%= study.ymal1Alt %>">
                </div>

                <div class="form-group">
                    <label for="ymal1Abstract" class="control-label">YMAL1 Abstract</label>
                    <textarea name="study[ymal1Abstract]" type="text" class="form-control" id="ymal1Abstract" rows="5"><%= study.ymal1Abstract%></textarea>
                </div>

                <div class="form-group">
                    <label for="ymal1Url" class="control-label">YMAL1 URL</label>
                    <input name="study[ymal1Url]" type="text" class="form-control" id="ymal1Url" value="<%= study.ymal1Url %>">
                </div>

                <div class="form-group">
                    <label for="ymal2Title" class="control-label">YMAL2 Title</label>
                    <input name="study[ymal2Title]" type="text" class="form-control" id="ymal2Title" value="<%= study.ymal2Title %>">
                </div>

                <div class="form-group">
                    <label for="ymal2Img" class="control-label">YMAL2 Image</label>
                    <input name="study[ymal2Img]" type="text" class="form-control" id="ymal2Img" value="<%= study.ymal2Img %>">
                </div>

                <div class="form-group">
                    <label for="ymal2Alt" class="control-label">YMAL2 Alt Text</label>
                    <input name="study[ymal2Alt]" type="text" class="form-control" id="ymal2Alt" value="<%= study.ymal2Alt %>">
                </div>

                <div class="form-group">
                    <label for="ymal2Abstract" class="control-label">YMAL2 Abstract</label>
                    <textarea name="study[ymal2Abstract]" type="text" class="form-control" id="ymal2Abstract" rows="5"><%= study.ymal2Abstract %></textarea>
                </div>

                <div class="form-group">
                    <label for="ymal2Url" class="control-label">YMAL2 URL</label>
                    <input name="study[ymal2Url]" type="text" class="form-control" id="ymal2Url" value="<%= study.ymal2Url %>">
                </div>

                <div class="form-group">
                    <label for="ymal3Title" class="control-label">YMAL3 Title</label>
                    <input name="study[ymal3Title]" type="text" class="form-control" id="ymal3Title" value="<%= study.ymal3Title %>">
                </div>

                <div class="form-group">
                    <label for="ymal3Img" class="control-label">YMAL3 Image</label>
                    <input name="study[ymal3Img]" type="text" class="form-control" id="ymal3Img" value="<%= study.ymal3Img %>">
                </div>

                <div class="form-group">
                    <label for="ymal3Alt" class="control-label">YMAL3 Alt Text</label>
                    <input name="study[ymal3Alt]" type="text" class="form-control" id="ymal3Alt" value="<%= study.ymal3Alt %>">
                </div>

                <div class="form-group">
                    <label for="ymal3Abstract" class="control-label">YMAL3 Abstract</label>
                    <textarea name="study[ymal3Abstract]" type="text" class="form-control" id="ymal3Abstract" rows="5"><%= study.ymal3Abstract %> </textarea>
                </div>

                <div class="form-group">
                    <label for="ymal3Url" class="control-label">YMAL3 URL</label>
                    <input name="study[ymal3Url]" type="text" class="form-control" id="ymal3Url" value="<%= study.ymal3Url %>">
                </div>

                <div class="form-group">
                    <label for="ctaBarTitleA" class="control-label">CTA Title Variation A</label>
                    <input name="study[ctaBarTitleA]" type="text" class="form-control" id="ctaBarTitleA" value="<%= study.ctaBarTitleA %>">
                </div>

                <div class="form-group">
                    <label for="ctaButtonA" class="control-label">CTA Button Variation A</label>
                    <input name="study[ctaButtonA]" type="text" class="form-control" id="ctaButtonA" value="<%= study.ctaButtonA %>">
                </div>

                <div class="form-group">
                    <label for="ctaBarTitleB" class="control-label">CTA Title Variation B</label>
                    <input name="study[ctaBarTitleB]" type="text" class="form-control" id="ctaBarTitleB" value="<%= study.ctaBarTitleB %>">
                </div>

                <div class="form-group">
                    <label for="ctaButtonB" class="control-label">CTA Button Variation B</label>
                    <input name="study[ctaButtonB]" type="text" class="form-control" id="ctaButtonB" value="<%= study.ctaButtonB %>">
                </div>

                <div class="form-group">
                    <label for="caseStudy" class="control-label">Case Study Body</label>
                    <textarea name="study[caseStudy]" type="text" id="caseStudy" class="form-control" placeholder="Full body with HTML markup here" rows="15" required><%= study.caseStudy %> </textarea>
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>

            </form>
</div>

<div class="col-lg-1">
</div>

<div class="col-lg-3">
    <a href="../edit" class="btn btn-primary" role="button">Return to Edit Page</a>
</div>
</div>
</div>

<!-- FOOTER -->
<% include ../../partials/footer %>

<!-- JAVASCRIPT -->
<% include ../../partials/js-includes %>

</body>
</html>
