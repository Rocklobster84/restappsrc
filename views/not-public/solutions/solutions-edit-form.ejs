<!DOCTYPE html>
<html lang="en">
<head>

    <!-- META SETTINGS -->
    <% include ../../partials/meta-settings.ejs %>

    <!-- PAGE TITLE -->
    <title>Edit Solution Listing</title>

    <!-- CSS FILES -->
    <% include ../../partials/css-includes %>

</head>

<body id="page-top">

<!-- TOP NAVIGATION -->
<% include ../../partials/navbar %>

<div class="container">
    <div class="row">

        <div class="col-lg-8">

    <h1>Edit Solution Entry</h1>

            <% if(error && error.length > 0){ %>
                <div class="alert dark-red" role="alert">
                    <strong>
                        <%= error %>
                    </strong>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert green" role="alert">
                    <strong>
                        <%= success %>
                    </strong>
                </div>
            <% } %>

    <form action="../<%= solution._id %>?_method=PUT" method="POST">

        <div class="form-group">
            <label for="title" class="control-label">Title</label>
            <input name="solution[title]" type="text" class="form-control" id="title" value="<%= solution.title %>" required>
        </div>

        <div class="form-group">
            <label for="abstract" class="control-label">Abstract</label>
            <textarea name="solution[abstract]" type="text" class="form-control" rows="5" required><%= solution.abstract %></textarea>
        </div>

        <div class="form-group">
            <label for="postUrl" class="control-label">Post URL</label>
            <input name="solution[postUrl]" type="text" class="form-control" value="<%= solution.postUrl %>">
        </div>


        <div class="form-group">
            <label for="imgUrl" class="control-label">Image URL</label>
            <input name="solution[imgUrl]" type="text" class="form-control" value="<%= solution.imgUrl %>"  required>
        </div>

        <div class="form-group">
            <label for="imgAltText" class="control-label">Image Alt Text</label>
            <input name="solution[imgAltText]" type="text" class="form-control" value="<%= solution.imgAltText %>"  required>
        </div>

        <h2 class="solutions-h5">Tags</h2>

        <h5 class="solutions-h5">Type</h5>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="article" id="article" class="form-check-input" <%= solution.tags.includes("article") ? "checked" : "" %> />
            <label for="article" class="form-check-label">
                Things to Read
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="webinar" id="webinar" class="form-check-input" <%= solution.tags.includes("webinar") ? "checked" : "" %> />
            <label for="webinar" class="form-check-label">
                Things to Watch
            </label>
        </div>


        <h5 class="solutions-h5">Industry</h5>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="aerospace" id="aerospace" class="form-check-input" <%= solution.tags.includes("aerospace") ? "checked" : "" %>/>
            <label for="aerospace" class="form-check-label">
                Aerospace
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="automotive" id="automotive" class="form-check-input" <%= solution.tags.includes("automotive") ? "checked" : "" %>/>
            <label for="automotive" class="form-check-label">
                Automotive
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="biomedical" id="biomedical" class="form-check-input" <%= solution.tags.includes("biomedical") ? "checked" : "" %>/>
            <label for="biomedical" class="form-check-label">
                Biomedical
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="chemical" id="chemical" class="form-check-input" <%= solution.tags.includes("chemical") ? "checked" : "" %>/>
            <label for="chemical" class="form-check-label">
                Chemical Processing
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="heavy-ind" id="heavy-ind" class="form-check-input" <%= solution.tags.includes("heavy-ind") ? "checked" : "" %>/>
            <label for="heavy-ind" class="form-check-label">
                Heavy Industry
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="marine" id="marine" class="form-check-input" <%= solution.tags.includes("marine") ? "checked" : "" %>/>
            <label for="marine" class="form-check-label">
                Marine
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="turbo" id="turbo" class="form-check-input" <%= solution.tags.includes("turbo") ? "checked" : "" %>/>
            <label for="turbo" class="form-check-label">
                Turbomachinery
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="wind-energy" id="wind-energy" class="form-check-input" <%= solution.tags.includes("wind-energy") ? "checked" : "" %>/>
            <label for="wind-energy" class="form-check-label">
                Wind Energy
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="other" id="other" class="form-check-input" <%= solution.tags.includes("other") ? "checked" : "" %>/>
            <label for="other" class="form-check-label">
                Other
            </label>
        </div>

        <h5 class="solutions-h5">Technology</h5>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="adaptation" id="adaptation" class="form-check-input" <%= solution.tags.includes("adaptation") ? "checked" : "" %>/>
            <label for="adaptation" class="form-check-label">
                Adaptive
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="geometry" id="geometry" class="form-check-input" <%= solution.tags.includes("geometry") ? "checked" : "" %>/>
            <label for="geometry" class="form-check-label">
                Geometry Modeling
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="glyph" id="glyph" class="form-check-input" <%= solution.tags.includes("glyph") ? "checked" : "" %>/>
            <label for="glyph" class="form-check-label">
                Glyph/Scripting
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="high-order" id="high-order" class="form-check-input" <%= solution.tags.includes("high-order") ? "checked" : "" %>/>
            <label for="high-order" class="form-check-label">
                High-Order
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="overset" id="overset" class="form-check-input" <%= solution.tags.includes("overset") ? "checked" : "" %>/>
            <label for="overset" class="form-check-label">
                Overset
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="structured" id="structured" class="form-check-input" <%= solution.tags.includes("structured") ? "checked" : "" %>/>
            <label for="structured" class="form-check-label">
                Structured
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="t-rex" id="t-rex" class="form-check-input" <%= solution.tags.includes("t-rex") ? "checked" : "" %>/>
            <label for="t-rex" class="form-check-label">
                T-Rex/Hybrid
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="unstructured" id="unstructured" class="form-check-input" <%= solution.tags.includes("unstructured") ? "checked" : "" %>/>
            <label for="unstructured" class="form-check-label">
                Unstructured
            </label>
        </div>

        <div class="form-check">
            <input type="checkbox" name="solution[tags]" value="voxel" id="voxel" class="form-check-input" <%= solution.tags.includes("voxel") ? "checked" : "" %>/>
            <label for="voxel" class="form-check-label">
                Voxel
            </label>
        </div>


        <button class="btn btn-primary" type="submit">Submit</button>

    </form>
</div>

<div class="col-lg-1">
</div>

<div class="col-lg-3">
    <a href="../edit" class="btn btn-primary" role="button">Return to Edit Page</a>
</div>
</div>
</div>

<!-- FOOTER -->
<% include ../../partials/footer %>

<!-- JAVASCRIPT -->
<% include ../../partials/js-includes %>

</body>
</html>
