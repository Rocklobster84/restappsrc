<!DOCTYPE html>
<html lang="en">
<head>

    <!-- META SETTINGS -->
    <% include ../../partials/meta-settings.ejs %>

    <!-- PAGE TITLE -->
    <title>Edit a Wallpaper Page</title>

    <!-- CSS FILES -->
    <% include ../../partials/css-includes %>

</head>

<body id="page-top">

<!-- TOP NAVIGATION -->
<% include ../../partials/navbar %>

<div class="container">
    <div class="row">

        <div class="col-lg-8">

            <h1>Edit a Wallpaper Page</h1>

            <form action="../../wallpaper/page/<%= wallpaper._id %>?_method=PUT" method="POST">

                <div class="form-group">
                    <label for="title" class="control-label">Title</label>
                    <input name="wallpaper[title]" type="text" class="form-control" id="title" value="<%= wallpaper.title %>" required>
                </div>

                <div class="form-group">
                    <label for="subHeading" class="control-label">Subheading</label>
                    <input name="wallpaper[subHeading]" type="text" class="form-control" id="subHeading" value="<%= wallpaper.subHeading %>" >
                </div>

                <div class="form-group">
                    <label for="imgBack" class="control-label">Background Image</label>
                    <input name="wallpaper[imgBack]" type="text" class="form-control" id="imgBack" value="<%= wallpaper.imgBack %>" required>
                </div>

                <div class="form-group">
                    <label for="description" class="control-label">Description</label>
                    <textarea name="wallpaper[description]" type="text" class="form-control" rows="5" required><%= wallpaper.description %></textarea>
                </div>

                <div class="form-group">
                    <label for="slug" class="control-label">Slug</label>
                    <input name="wallpaper[slug]" type="text" class="form-control" id="slug" value="<%= wallpaper.slug %>" required>
                </div>

                <div class="form-group">
                    <label for="copy" class="control-label">Page Contents</label>
                    <textarea name="wallpaper[copy]" type="text" class="form-control" rows="20" required><%= wallpaper.copy %></textarea>
                </div>


                <button class="btn btn-primary" type="submit">Submit</button>

            </form>
        </div>

        <div class="col-lg-1">
        </div>

        <div class="col-lg-3">
            <a href="../page/edit" class="btn btn-primary" role="button">Return to Edit Page</a>
        </div>
    </div>
</div>

<!-- FOOTER -->
<% include ../../partials/footer %>

<!-- JAVASCRIPT -->
<% include ../../partials/js-includes %>

</body>
</html>
